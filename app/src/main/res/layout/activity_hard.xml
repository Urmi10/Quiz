                android:text="Android.intent.action.BATTERY_OKAY" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="mes4"
                android:text="Android.intent.action.CALL_BUTTON" />
